<div class="form-group {{ formGroupClass}}">
  {{# formGroupInputLabel}}<label for="{{formGroupInputID}}">{{ formGroupInputLabel}}</label>{{/ formGroupInputLabel}}
  <div class="input-group-icon input-group-icon-left{{# formGroupInputError}} input-group-is-invalid{{/ formGroupInputError}}">
    <input type="text" class="form-control {{formGroupInputClass}}" id="{{ formGroupInputID }}" {{# formGroupInputPlaceholder}}placeholder="{{ formGroupInputPlaceholder.text}}"{{/ formGroupInputPlaceholder}}{{# formGroupInputState}} {{ formGroupInputState}}{{/ formGroupInputState}}{{#formGroupInputAriaLabel}} aria-label="{{formGroupInputAriaLabel}}"{{/formGroupInputAriaLabel}}>
    <span class="icon {{ icon-name }}" aria-hidden="true"></span>
  </div>
  {{^formGroupInputError}}
  {{# formGroupInputHelpText}}
  <small id="textRequiredHelpBlock" class="form-text">{{ formGroupInputHelpText }}</small>
  {{/ formGroupInputHelpText}}
  {{/formGroupInputError}}
  {{# formGroupInputError}}
    <div class="invalid-feedback" id={{id}}>
      <span class="icon icon-exclamation icon-xs" aria-hidden="true"></span>
      <span class="sr-only">Erreur</span>
      {{ text }}
    </div>
  {{/ formGroupInputError}}
</div>
