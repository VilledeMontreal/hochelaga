
<div class="row">

	{{# formRadios}}
		<div class="col-12 col-md-6">
			<div class="form-group {{ formGroupClass}}">
				{{> components-radio-item }}
			</div>
		</div>
	{{/ formRadios}}


	{{# formRadiosValidation}}
		<div class="col-12 col-md-6">
			<div class="form-group {{ formGroupClass}}">
			{{> components-radio-item }}
			{{# formRadioError}}
				<div class="invalid-feedback" id={{id}}>
					<span class="icon icon-exclamation icon-xs" aria-hidden="true"></span>
					<span class="sr-only">Erreur</span>
					{{ text }}
				</div>
			{{/ formRadioError}}
			</div>
		</div>
	{{/ formRadiosValidation}}
</div>


{{# formRadiosInline }}
	<h4 class="pl-pattern-subtitle">Position inline</h4>
	<div class="row list-unstyled">
	<div class="col-12">
		<div class="form-group {{ formGroupClass}}">
		{{> components-radio-item }}
		</div>
	</div>
	</div>
{{/ formRadiosInline }}

