<div class="form-group {{ formGroupClass}}">
  {{^ formGroupNoLabel}}
  <label for="{{formGroupInputID}}">{{ formGroupInputLabel}}</label>
  {{/ formGroupNoLabel}}
  {{# formGroupInputHelpText}}
  <span id="{{id}}" class="form-text">{{ text }}</span>
  {{/ formGroupInputHelpText}}
  <input type="{{formGroupInputType}}" class="form-control {{formGroupInputClass}}" id="{{ formGroupInputID }}" {{# formGroupInputPlaceholder}}placeholder="{{ formGroupInputPlaceholder.text}}"{{/ formGroupInputPlaceholder}}{{# formGroupInputHelpText}} aria-describedby="{{id}}"{{/ formGroupInputHelpText}}{{#formGroupInputError}} aria-describedby="{{id}}"{{/formGroupInputError}}{{# formGroupInputState}} {{ formGroupInputState}}{{/ formGroupInputState}}{{# formGroupInputRequired}} required{{/ formGroupInputRequired}}>
  {{# formGroupInputCounter}}
  <span id="{{id}}" class="form-text">{{ text }}</span>
  {{/ formGroupInputCounter}}
  {{# formGroupInputError}}
  <div class="invalid-feedback" id="{{id}}">{{ formGroupInputError.text }}</div>
  {{/ formGroupInputError}}
  {{# formGroupProgress}}
  {{> components-progress-bar-item}}
  {{/ formGroupProgress}}
</div>
