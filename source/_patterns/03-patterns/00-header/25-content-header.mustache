<div class="document-heading {{ documentHeadingClass }}{{# documentHeadingFullWidth}} document-heading-fullwidth {{/ documentHeadingFullWidth}}{{^documentHeadingFullWidth}} document-heading-grid{{/ documentHeadingFullWidth}}">
  {{# documentHeadingImageUrl}}
  <div class="document-heading-image-container{{# hideDocumentHeadingImageMobile}} d-none d-sm-block{{/ hideDocumentHeadingImageMobile}}">
    <div style="background-image:url('{{documentHeadingImageUrl}}')" class="document-heading-background"></div>
    {{# media.copyright }}
    <div class="position-relative">
      <div class="badge-copyright">
        {{> components-etiquette}}
      </div>
    </div>
    {{/ media.copyright }}
  </div>
  {{/ documentHeadingImageUrl}}

  {{# documentHeadingFullWidth}}<div class="container position-relative">{{/ documentHeadingFullWidth}}
    {{# documentHeadingFullWidth}}
    <div class="row document-heading-header">
      {{^ documentHeadingOverride}}
      {{^ has-illustration}}
      <div class="{{^ customHeadingGridClass}}col-12 col-lg-7{{/customHeadingGridClass}}{{# customHeadingGridClass}} {{ customHeadingGridClass}}{{/customHeadingGridClass}}">
        <div class="pb-2">
          {{# heading-surtitle}}
          <div class="document-heading-surtitle">{{text}}</div>
          {{/ heading-surtitle}}

          <h1 class="{{^headingClass}}h1{{/headingClass}}{{#headingClass}} {{headingClass}}{{/headingClass}}">{{{ heading }}}</h1>

          {{# heading-fake-title}}
          <h2 class="h1">{{ heading-fake-title }}</h2>
          {{/ heading-fake-title}}
          {{# heading-subtitle}}
          <div class="document-heading-subtitle">{{heading-subtitle}}</div>
          {{/ heading-subtitle}}

        </div>
        {{# has-brand-border}}
        <div class="brand-border-bottom"></div>
        {{/ has-brand-border}}
        {{# has-search-form}}
        <div class="form-group form-group-lg">
          <div class="input-group-icon input-group-icon-left">
            <input type="text" class="form-control input-rounded" id="input-group-search" placeholder="Rechercher ..." aria-label="Rechercher">
            <span class="icon icon-search" aria-hidden="true"></span>
          </div>
        </div>
        {{/ has-search-form}}
        {{# has-quick-links}}
        <div class="quick-links">
          <span class="quick-links-label">Recherche rapide</span>
          <ul class="list-inline">
            {{# quickLinksItem }}
            <li class="list-inline-item"><a href="{{ url }}">{{ label }}</a></li>
            {{/ quickLinksItem }}
          </ul>
        </div>
        {{/ has-quick-links}}
      </div>
      {{/ has-illustration}}
      {{# has-illustration}}
      <div class="col-12 col-md-6 align-self-center">
        <div class="pb-2">
          <div class="document-heading-surtitle">Bienvenue sur Montréal.ca</div>
          <h1 class="heading-fullwidth-title">{{{ heading }}}</h1>
        </div>
        {{# has-search-form}}
        <div class="form-group form-group-lg">
          <div class="input-group-icon input-group-icon-left">
            <input type="text" class="form-control input-rounded" id="input-group-search" placeholder="Rechercher ..." aria-label="Rechercher">
            <span class="icon icon-search" aria-hidden="true"></span>
          </div>
        </div>
        {{/ has-search-form}}
      </div>
      <div class="col-12 col-md-6 align-self-center mt-4 mt-md-0">
        <img src="https://res.cloudinary.com/villemontreal/image/upload/w_768,c_limit/f_auto,dpr_auto,q_auto/v1/portail/uyshs5agcweflio7enhq.png" alt="" class="img-fluid">
      </div>
      {{/ has-illustration}}
      {{/ documentHeadingOverride}}
      {{# documentHeadingOverride}}
        {{# mesures-urgence}}
        <div class="col-12 col-lg-8">
          <div class="d-flex justify-content-center mb-4">
            <span class="icon icon-sante-et-securite-publiques" aria-hidden="true"></span>
          </div>
          {{# heading-surtitle}}
          <div class="document-heading-surtitle">{{heading-surtitle}}</div>
          {{/ heading-surtitle}}
          <h1 class="sr-only">Bienvenue sur Montréal.ca</h1>
          <h2 class="h3">{{{ heading }}}</h2>
          {{# heading-subtitle}}
          <div class="document-heading-subtitle">{{{heading-subtitle}}}</div>
          {{/ heading-subtitle}}
          {{# button-cta}}
          {{> components-button}}
          {{/ button-cta}}
        </div>
        {{/ mesures-urgence}}
      {{/ documentHeadingOverride}}
    </div>
    {{/ documentHeadingFullWidth}}
    {{# documentHeadingNotch}}
    <div class="document-heading-wrapper">
      <div class="document-heading-content-wrapper">
        <div class="document-heading-content col-12{{# has-left-notch}} col-lg-8{{/ has-left-notch}}{{^ has-left-notch}}{{^notch-full-width }} col-lg-10{{/notch-full-width}}{{/ has-left-notch}}"></div>
      </div>
    </div>
    {{/ documentHeadingNotch}}
  {{# documentHeadingFullWidth}}</div>{{/ documentHeadingFullWidth}}
</div>
