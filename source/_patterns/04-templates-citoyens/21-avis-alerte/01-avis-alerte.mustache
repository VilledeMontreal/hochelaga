{{> components-skip-navigation }}
<header class="header-main-nav {{# navbarFixedTop}}is-fixed-top{{/navbarFixedTop}}">
{{> components-navbar }}
</header>

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content">

  <div class="container pt-4 pt-lg-8">
    <div class="row">
      <div class="col-12 col-lg-7">
        {{> components-breadcrumbs}}
      </div>
    </div>
  </div>

  <div class="region-content pt-0">

    <div class="container">

      <div class="row justify-content-between">
        <div class="col-12 col-lg-7">
          <header class="content-header">

            {{# module-state }}
            <div class="mb-2">
              {{> components-etiquette }}
            </div>
            {{/ module-state }}

            <h1>{{ heading }}</h1>

            {{> patterns-content-header-extras}}

          </header>

          {{# module-content}}
          <div class="content-modules">
          {{> templates-citoyens-content-avis-alerte}}
          </div>
          {{/ module-content}}

        </div>

        {{# sidebarRight}}
        <aside class="col-12 col-lg-4" role="complementary">
          {{> templates-citoyens-sidebar-avis-alerte}}
        </aside>
        {{/ sidebarRight}}

      </div>

      <section class="row justify-content-between">
        <div class="col-12 col-lg-7">
        {{> components-feedback-form}}
        </div>
      </section>

    </div>
  </div>
</main>

{{> patterns-footer-main }}

{{# module-content.module-map}}
<script>
  window.addEventListener('load', function() {
    var data = {
      address : "{{{location.addressInfos.address}}}",
      title : "{{{location.addressInfos.addressTitle}}}",
      uri: "{{{location.addressInfos.uri}}}"
    }
    generateMap([{{{ location.lngLat }}}], data, '{{ location.mapID }}', {{ location.showZoom}});
  })
</script>
{{/ module-content.module-map}}
