{{> styles-skip-links-section }}

<header class="header-main-nav {{# navbarFixedTop}}is-fixed-top{{/navbarFixedTop}}">
{{> components-navbar }}
</header>

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content" role="main">

  <div class="container pt-4 pt-lg-8">
    <div class="row{{^documentHeading}} justify-content-center{{/documentHeading}}">
      <div class="col-12 col-lg-7">
        {{> components-breadcrumbs}}
      </div>
    </div>
  </div>

  {{# documentHeading}}
  <div class="mb-4 mb-lg-0">
  {{> patterns-content-header}}
  </div>
  {{/ documentHeading}}

  <div class="region-content pt-0">

    <div class="container">

      <div class="row justify-content-center">
        <div class="col-12 col-lg-7">
          <header class="content-header">

            <h1>{{ heading }}</h1>

            {{> patterns-content-header-extras}}

          </header>

          <div class="lead">
            {{{ lead }}}
          </div>

          {{# module-content}}
          <div class="content-modules">
          {{> templates-citoyens-nouvelle-content}}
          </div>
          {{/ module-content}}

          {{# module-etiquette}}
          <div class="badges-container mb-7">
            <h2 class="h5 text-body">Recherche rapide</h2>
            <ul class="list-inline">
            {{# badges-links }}
              <li class="list-inline-item">
              {{> components-badge }}
              </li>
            {{/ badges-links }}
            </ul>
          </div>
          {{/ module-etiquette}}

        </div>

      </div>

      <section class="row justify-content-center">
        <div class="col-12 col-lg-7">
        {{> components-feedback-form}}
        </div>
      </section>

    </div>
  </div>
</main>

{{> patterns-footer-main }}
