{{> components-skip-navigation }}
<header class="header-main-nav {{# navbarFixedTop}}is-fixed-top{{/navbarFixedTop}}">
{{> components-navbar }}
</header>

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content">

  <div class="container pt-4 pt-lg-8">
    <div class="row">
      <div class="col-12">
        {{> components-fil-ariane}}
      </div>
    </div>
  </div>

  {{# documentHeading}}
  <div class="mb-4 mb-lg-0">
  {{> patterns-content-header}}
  </div>
  {{/ documentHeading}}

  <div class="region-content pt-0">

    <div class="container">

      <div class="row justify-content-between">
        <div class="col-12 col-lg-7">
          <header class="content-header">

            <h1>{{ heading }}</h1>

            {{> patterns-content-header-extras}}

          </header>

          <div class="lead">
            {{{ lead }}}
          </div>

          {{# module-content}}
          <div class="content-modules">
          {{> templates-citoyens-nouvelle-content}}
          </div>
          {{/ module-content}}

          {{# module-links}}
          <div class="badges-container mb-8">
            <h2 class="h5 text-body">Recherche rapide</h2>
            <ul class="list-inline mb-n1 font-size-base-interface">
            {{# links }}
              <li class="list-inline-item mr-1 mb-1">
                <a href="{{url}}" title="link title text">{{title}}</a>
              </li>
            {{/ links }}
            </ul>
          </div>
          {{/ module-links}}
        </div>

      </div>

      <section class="row">
        <div class="col-12">
        {{> components-feedback-form}}
        </div>
      </section>

    </div>
  </div>
</main>

{{> patterns-footer-main }}
