{{> components-skip-navigation }}
<header class="header-main-nav {{# navbarFixedTop}}is-fixed-top{{/navbarFixedTop}}">
{{> components-navbar }}
</header>

<main class="main-content {{ pageClasses }}" id="main-content" aria-label="Main Content">

  {{# messageBar}}
  {{> components-message-bar}}
  {{/ messageBar}}

  <div class="container pt-4 pt-lg-8">
    <div class="row">
      <div class="col-12">
        {{> components-fil-ariane}}
      </div>
    </div>
  </div>

  {{# documentHeading}}
  <div class="mb-4 mb-lg-0">
  {{> patterns-content-header}}
  </div>
  {{/ documentHeading}}

  <div class="region-content pt-0">

    <div class="container">

      <div class="row {{# sidebarRight }} d-md-block clearfix{{/ sidebarRight}}">
        <div class="col-12 col-lg-7 float-left">
          <header class="content-header">

            {{# state}}
            <div class="d-flex mb-2">
              {{> components-etiquette }}
            </div>
            {{/ state}}

            <h1>{{ heading }}</h1>

            {{> patterns-content-header-extras}}

            {{# header-extras}}
            {{> components-liste-contenu}}
            {{/ header-extras}}

          </header>
        </div>
        {{# sidebarRight}}
        <div class="col-12 col-lg-4 float-right">
          {{> templates-citoyens-sidebar-lieu}}
        </div>
        {{/ sidebarRight}}
        <div class="col-12 col-lg-7 float-left">
          {{# lead}}
          <div class="lead">
          {{{ lead }}}
          </div>
          {{/ lead}}

          {{# module-content}}
          <div class="content-modules">
          {{> templates-citoyens-lieu-content}}
          </div>
          {{/ module-content}}

          {{# module-links}}
          <div class="badges-container mb-8">
            <h2 class="h5 text-body">Recherche rapide</h2>
            <ul class="list-inline mb-n1 font-size-base-interface">
            {{# links }}
              <li class="list-inline-item mr-1 mb-1">
                <a href="{{url}}" title="link title text">{{title}}</a>
              </li>
            {{/ links }}
            </ul>
          </div>
          {{/ module-links}}
        </div>
      </div>

      <section class="row">
        <div class="col-12">
        {{> components-feedback-form}}
        </div>
      </section>

    </div>
  </div>
</main>

{{> patterns-footer-main }}

{{# module-content.module-map.cards.card-item}}
<script>
  window.addEventListener('load', function() {
    var data = {
      address : "{{{card-media.map.location.addressInfos.address}}}",
      title : "{{{card-media.map.location.addressInfos.addressTitle}}}",
      uri: "{{{card-media.map.location.addressInfos.uri}}}"
    }
    generateMap([{{{ card-media.map.location.lngLat }}}], data, '{{ card-media.map.location.mapID }}', {{ card-media.map.location.showZoom}});
  })
</script>
{{/ module-content.module-map.cards.card-item}}
